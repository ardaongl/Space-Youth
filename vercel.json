{
  "buildCommand": "npm run build",
  "installCommand": "pnpm install --no-frozen-lockfile",
  "outputDirectory": "dist/spa",
  "rewrites": [
    { "source": "/((?!api/).*)", "destination": "/index.html" }
  ],
  "headers": [
    {
      "source": "/(.*)",
      "headers": [
        {
          "key": "Cache-Control",
          "value": "public, max-age=0, must-revalidate"
        }
      ]
    }
  ]
}
